@model WebApplication1.ViewModel.ArticuloVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (ViewData["message"] != null)
{
    <div class="alert alert-dark" role="alert">
        @ViewData["message"]
    </div>
}

<h1>Editar Artículo</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @await Html.PartialAsync("~/Views/Articulo/partials/form_articulos.cshtml")

            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fas fa-arrow-circle-left"></i> Lista de Artículos</a>
</div>